  </ItemGroup>

  <ItemGroup>
    <None Remove="Rmrk\" />
    <None Remove="RmrkV2\" />
    <None Remove="Unique\" />
    <None Remove="Basilisk\" />
    <None Remove="Quartz\" />
    <None Remove="Opal\" />
    <None Remove="Universal\" />
    <None Remove="OnFinality\" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Rmrk\" />
    <Folder Include="RmrkV2\" />
    <Folder Include="Unique\" />
    <Folder Include="Basilisk\" />
    <Folder Include="Quartz\" />
    <Folder Include="Opal\" />
    <Folder Include="Universal\" />
    <Folder Include="OnFinality\" />
  </ItemGroup>

  <ItemGroup>
    <None Include="../README.md" Pack="true" PackagePath="\" />
  </ItemGroup>
